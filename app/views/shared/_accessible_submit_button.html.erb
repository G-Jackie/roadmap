<input id="<%= id %>" 
       type="submit" 
       class="form-submit <%= classes ||= '' %>" 
       value="<%= val %>"
       aria-disabled="<%= disabled_initially %>"
       aria-describedby="<%= id %>_tip" />

<span role="" class="submit-tooltip left-indent"><%= tooltip %></span>

<script type="text/javascript">
  $(document).ready(function(){
    // Allow the 'button disabled' tooltip to appear if the button is NOT clickable
    $("#<%= id %>").on('click focus', function(e){
      if($(this).attr('aria-disabled') == 'true'){
        e.preventDefault();
        $(this).siblings(".submit-tooltip").attr('role', 'tooltip');
      }else{
        $(this).siblings(".submit-tooltip").attr('role', '');
      }
    }).on('blur', function(){
      $(this).siblings(".submit-tooltip").attr('role', '');
    });
  });
</script>