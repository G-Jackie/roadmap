
<div class="new-plan-container">

<h1>Choose one of these templates:</h1>


<%= form_tag(controller: "plans", action: "create", method: "post", class: "choose_template_form") do %>
  <ul id="choose-template">
    <% @templates.each do |t| %>
      <li>
        <%= radio_button_tag(:template_id, t.id) %>
        <% desc = strip_tags(t.description) %>
        <%= label_tag("template_id_#{t.id}", "#{t.title} (#{desc})") %>
      </li>
    <% end %>
  </ul>
  <%= submit_tag("Create Plan") %>
<% end %>


</div>
